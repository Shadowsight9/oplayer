{
  "name": "oplayer",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=12",
    "pnpm": ">=7"
  },
  "keywords": [
    "oplayer",
    "video-player"
  ],
  "scripts": {
    "watch": "pnpm --parallel run start",
    "doc": "pnpm --filter=@oplayer/standalone-example start",
    "doc:preview": "pnpm --filter=@oplayer/standalone-example run preview",
    "start": "concurrently -n watch,doc \"pnpm watch\" \"pnpm doc\"",
    "build:packs": "pnpm --filter=@oplayer/* run build",
    "build:doc": "pnpm --filter=@oplayer/standalone-example run build",
    "build:cache": "nx run-many --target=build --all --parallel",
    "build:affected": "nx Affected --target=build",
    "graph": "nx dep-graph",
    "clear": "rimraf 'packages/*/{dist,tsconfig.tsbuildinfo,node_modules,.rollup.cache}' && rimraf node_modules &&  rimraf docs",
    "changeset": "changeset",
    "release": "changeset publish",
    "test": "echo 1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.0",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/node": "^17.0.45",
    "@types/rollup-plugin-auto-external": "^2.0.2",
    "@vitejs/plugin-react": "^1.3.2",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.47",
    "lint-staged": "^13.0.3",
    "nx": "latest",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "^2.9.12"
  }
}
