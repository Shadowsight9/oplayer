{
  "name": "oplayer",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=12",
    "pnpm": ">=7"
  },
  "author": "shiyiya",
  "keywords": [
    "oplayer",
    "video-player"
  ],
  "scripts": {
    "watch": "pnpm --parallel run start",
    "start": "pnpm run watch",
    "build:packs": "pnpm --filter=@oplayer/* run build",
    "build:cache": "nx run-many --target=build --all --parallel",
    "build:affected": "nx Affected --target=build",
    "graph": "nx dep-graph",
    "clear": "rimraf 'packages/*/{dist,tsconfig.tsbuildinfo,node_modules,.rollup.cache}' && rimraf node_modules &&  rimraf docs",
    "changeset": "changeset",
    "release": "changeset publish",
    "test": "echo 1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@types/node": "^18.11.4",
    "@vitejs/plugin-react": "^2.1.0",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "lint-staged": "^13.0.3",
    "nx": "latest",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "terser": "^5.15.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vite-plugin-banner": "^0.5.0"
  }
}
