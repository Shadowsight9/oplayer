{
  "name": "oplayer",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=12",
    "pnpm": ">=7"
  },
  "author": "shiyiya",
  "keywords": [
    "oplayer",
    "video-player"
  ],
  "scripts": {
    "watch": "pnpm --parallel run start",
    "start": "pnpm run watch",
    "build:packs": "pnpm --filter=@oplayer/* run build",
    "build:core": "pnpm --filter=@oplayer/core run build",
    "build:cache": "nx run-many --target=build --all --parallel",
    "build:affected": "nx Affected --target=build",
    "graph": "nx dep-graph",
    "clear": "rimraf 'packages/*/{dist,tsconfig.tsbuildinfo,node_modules,.rollup.cache}' && rimraf node_modules &&  rimraf docs",
    "changeset": "changeset",
    "release": "changeset publish",
    "test": "echo 1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@types/node": "^18.11.4",
    "@vitejs/plugin-react": "^2.1.0",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "lint-staged": "^13.0.3",
    "nx": "latest",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "terser": "^5.15.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vite-plugin-banner": "^0.5.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-destructuring": "^7.10.4",
    "@babel/plugin-transform-parameters": "^7.10.5",
    "@babel/plugin-transform-spread": "^7.11.0",
    "@babel/plugin-transform-template-literals": "^7.10.5",
    "babel-plugin-syntax-trailing-function-commas": "^6.5.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3"
  }
}
