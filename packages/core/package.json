{
  "name": "@oplayer/core",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "./dist/index.es.js",
  "types": "./dist/src/index.d.ts",
  "sideEffects": false,
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "concurrently -n es,dts,plugins \"vite build --watch\"  \"tsc --emitDeclarationOnly --watch\" \"node ./build-plugins.js\"",
    "tsc": "tsc --noEmit && echo",
    "build": "vite build && tsc --emitDeclarationOnly && pnpm run build:plugins",
    "build:plugins": "node ./build-plugins.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./plugins/hls": {
      "import": "./dist/plugins/hls.es.js",
      "require": "./dist/plugins/hls.umd.js"
    },
    "./plugins/torrent": {
      "import": "./dist/plugins/torrent.es.js",
      "require": "./dist/plugins/torrent.umd.js"
    }
  },
  "files": [
    "dist",
    "src",
    "plugins"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not op_mini all",
    "IE 11"
  ],
  "peerDependencies": {
    "hls.js": "^1.1.5",
    "webtorrent": "^1.8.24"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "glob": "^7.2.3",
    "hls.js": "^1.1.5",
    "webtorrent": "^1.8.24"
  }
}
